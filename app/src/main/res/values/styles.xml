<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="BasicText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
</resources>
