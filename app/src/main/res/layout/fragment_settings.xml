<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_main">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/st_fr_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/st_fr_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="60dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/st_fr_tv_timer"
        android:text="@string/timer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/st_fr_guideline2"
        app:layout_constraintStart_toStartOf="@+id/st_fr_guideline"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/HeadText"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/st_fr_tv_work_session"
        android:text="@string/work_session"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/st_fr_guideline2"
        app:layout_constraintStart_toStartOf="@+id/st_fr_guideline"
        app:layout_constraintTop_toBottomOf="@+id/st_fr_tv_timer"
        />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/st_fr_sb_work_session"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:max="17"
        app:layout_constraintEnd_toStartOf="@+id/st_fr_guideline2"
        app:layout_constraintStart_toStartOf="@+id/st_fr_guideline"
        app:layout_constraintTop_toBottomOf="@+id/st_fr_tv_work_session"
        style="@android:style/Widget.Material.Light.SeekBar"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/st_fr_tv_work_session_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/st_fr_guideline2"
        app:layout_constraintTop_toBottomOf="@+id/st_fr_tv_work_session"
        tools:text="32" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/st_fr_tv_break_interval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/break_interval"
        app:layout_constraintEnd_toStartOf="@+id/st_fr_guideline2"
        app:layout_constraintStart_toStartOf="@+id/st_fr_guideline"
        app:layout_constraintTop_toBottomOf="@+id/st_fr_sb_work_session"
        />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/st_fr_sb_break_interval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:max="25"
        app:layout_constraintEnd_toStartOf="@+id/st_fr_guideline2"
        app:layout_constraintStart_toStartOf="@+id/st_fr_guideline"
        app:layout_constraintTop_toBottomOf="@+id/st_fr_tv_break_interval"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/st_fr_tv_break_interval_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/st_fr_guideline2"
        app:layout_constraintTop_toBottomOf="@+id/st_fr_tv_break_interval"
        tools:text="32" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/st_fr_tv_long_break_interval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/long_break_interval"
        app:layout_constraintEnd_toStartOf="@+id/st_fr_guideline2"
        app:layout_constraintStart_toStartOf="@+id/st_fr_guideline"
        app:layout_constraintTop_toBottomOf="@+id/st_fr_sb_break_interval"
        />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/st_fr_sb_long_break_interval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:max="11"
        app:layout_constraintEnd_toStartOf="@+id/st_fr_guideline2"
        app:layout_constraintStart_toStartOf="@+id/st_fr_guideline"
        app:layout_constraintTop_toBottomOf="@+id/st_fr_tv_long_break_interval"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/st_fr_tv_long_break_interval_value"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/st_fr_guideline2"
        app:layout_constraintTop_toBottomOf="@+id/st_fr_tv_long_break_interval"
        tools:text="32" />

</androidx.constraintlayout.widget.ConstraintLayout>